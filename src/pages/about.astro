---
import { getCollection } from "astro:content";
import IconBook from "../components/Icons/IconBook.astro";
import IconBulb from "../components/Icons/IconBulb.astro";
import IconGlobe from "../components/Icons/IconGlobe.astro";
import IconRocket from "../components/Icons/IconRocket.astro";
import Layout from "../layouts/Layout.astro";

const allPosts = await getCollection("blog");
---

<Layout title="من نحن">
  <div
    class="bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 py-16"
  >
    <div class="max-w-6xl mx-auto px-4">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1
          class="text-4xl md:text-5xl font-bold text-gray-800 dark:text-white mb-6"
        >
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-emerald-600 mb-5"
          >
            صفحة
          </span>
          <br />
          <span class="mt-5">بوابتك إلى العالم التقني العربي</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          نُترجم التعقيد التقني إلى محتوى عربي مبسَّط، لنصنع فضاءً معرفياً يُلهم
          الجيل العربي الرقمي
        </p>
      </div>

      <!-- Values Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-20">
        <div
          class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow"
        >
          <IconRocket class="w-12 h-12 text-blue-600 mb-4" />
          <h3 class="text-xl font-semibold mb-2 dark:text-white">
            إطلاق العقول
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            تفكيك المفاهيم المعقدة إلى خطوات تنفيذية عملية
          </p>
        </div>

        <div
          class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow"
        >
          <IconGlobe class="w-12 h-12 text-emerald-600 mb-4" />
          <h3 class="text-xl font-semibold mb-2 dark:text-white">جسر معرفي</h3>
          <p class="text-gray-600 dark:text-gray-400">
            ربط التقنية العالمية بالعقلية العربية
          </p>
        </div>

        <div
          class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow"
        >
          <IconBulb class="w-12 h-12 text-amber-600 mb-4" />
          <h3 class="text-xl font-semibold mb-2 dark:text-white">
            إبداع منهجي
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            محتوى مدعوم بأحدث المنهجيات التعليمية
          </p>
        </div>

        <div
          class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow"
        >
          <IconBook class="w-12 h-12 text-purple-600 mb-4" />
          <h3 class="text-xl font-semibold mb-2 dark:text-white">
            مكتبة رقمية
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            موارد تعليمية متجددة لكل المستويات
          </p>
        </div>
      </div>

      <!-- Mission Statement -->
      <div class="bg-blue-50 dark:bg-gray-700 rounded-2xl p-8 mb-16">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">
            مهمتنا: تمكين العقل العربي رقمياً
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300">
            نصنع محتوى تقنياً يُواكب السرعة التكنولوجية ويحافظ على الهوية
            الثقافية، عبر مزج الدقة العلمية مع بساطة الشرح لبناء مجتمع تقني عربي
            واعٍ.
          </p>
        </div>
      </div>

      <!-- Content Pillars -->
      <div class="grid lg:grid-cols-3 gap-8 mb-20">
        <div class="lg:col-span-2">
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">
              أركان محتوانا
            </h3>
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="bg-blue-100 dark:bg-gray-700 p-3 rounded-lg">
                  <span class="text-blue-600 dark:text-blue-400 font-bold"
                    >١</span
                  >
                </div>
                <div>
                  <h4 class="font-semibold text-gray-800 dark:text-white mb-2">
                    شروحات تقنية عملية
                  </h4>
                  <p class="text-gray-600 dark:text-gray-400">
                    تحويل النظريات إلى خطوات تنفيذية
                  </p>
                </div>
              </div>
              <!-- Repeat similar blocks for other pillars -->
            </div>
          </div>
        </div>

        <div class="bg-emerald-50 dark:bg-gray-700 rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">
            بالأرقام
          </h3>
          <div class="space-y-6">
            <div class="text-center p-4 bg-white dark:bg-gray-800 rounded-xl">
              <p class="text-4xl font-bold text-emerald-600 mb-2">
                {allPosts.length}
              </p>
              <p class="text-gray-600 dark:text-gray-400">مقالة تقنية</p>
            </div>
            <!-- Add more stats blocks -->
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
