---
// src/components/Pagination.astro
// Add default values for safety
const { currentPage = 1, totalPages = 1, baseUrl = "" } = Astro.props;
const getPageUrl = (pageNum) =>
  pageNum === 1 ? baseUrl : `${baseUrl}/${pageNum}`;
---

<div class="flex justify-center items-center gap-2 my-12">
  {/* Previous Button */}
  {
    currentPage > 1 ? (
      <a
        rel="prev"
        href={getPageUrl(currentPage - 1)}
        class="p-2 rounded-lg hover:bg-purple-100 dark:hover:bg-purple-900/30 transition-colors"
        aria-label="الصفحة السابقة"
      >
        <svg
          class="w-5 h-5 rtl:rotate-180"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          />
        </svg>
      </a>
    ) : (
      <span class="p-2 rounded-lg opacity-50 cursor-not-allowed">
        <svg
          class="w-5 h-5 rtl:rotate-180"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          />
        </svg>
      </span>
    )
  }

  {/* Page Numbers */}
  {
    Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
      <a
        key={page}
        href={`${baseUrl}/${page}`}
        class={`px-3.5 py-1.5 rounded-lg text-sm ${
          page === currentPage
            ? "bg-purple-600 text-white"
            : "hover:bg-purple-100 dark:hover:bg-purple-900/30 text-gray-700 dark:text-gray-300"
        }`}
        aria-current={page === currentPage ? "page" : null}
      >
        {page}
      </a>
    ))
  }

  {/* Next Button */}
  {
    currentPage < totalPages ? (
      <a
        rel="next"
        href={getPageUrl(currentPage + 1)}
        class="p-2 rounded-lg hover:bg-purple-100 dark:hover:bg-purple-900/30 transition-colors"
        aria-label="الصفحة التالية"
      >
        <svg
          class="w-5 h-5 rtl:rotate-180"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>
    ) : (
      <span class="p-2 rounded-lg opacity-50 cursor-not-allowed">
        <svg
          class="w-5 h-5 rtl:rotate-180"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </span>
    )
  }
</div>
