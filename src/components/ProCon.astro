---
// src/components/ProCon.astro
const { type = "pro", items = [] } = Astro.props;
const title = type === "pro" ? "Pros" : "Cons";
const iconColor = type === "pro" ? "text-green-500" : "text-red-500";
---

<div class="space-y-4 my-6">
  <div class="flex items-center gap-2 mb-3">
    <span class={`${iconColor} text-xl`}>
      {type === "pro" ? "✓" : "✗"}
    </span>
    <h3 class="text-lg font-semibold dark:text-white">{title}</h3>
  </div>

  <ul class="space-y-2 pl-8">
    {
      items.map((item) => (
        <li class="relative before:absolute before:-left-4 before:top-2 before:w-1.5 before:h-1.5 before:rounded-full dark:before:bg-gray-400 before:bg-gray-600">
          {item}
        </li>
      ))
    }
  </ul>
</div>
