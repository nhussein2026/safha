---
// src/components/ComparisonTable.astro
const { headers, rows } = Astro.props;
---

<div
  class="overflow-x-auto rounded-lg border border-gray-200 dark:border-gray-700"
>
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
    >
      <tr>
        {
          headers.map((header) => (
            <th scope="col" class="px-6 py-3">
              {header}
            </th>
          ))
        }
      </tr>
    </thead>
    <tbody>
      {
        rows.map((row, index) => (
          <tr
            class={`${index % 2 ? "bg-gray-50 dark:bg-gray-800" : "bg-white dark:bg-gray-900"} border-t border-gray-200 dark:border-gray-700`}
          >
            {Object.values(row).map((cell) => (
              <td class="px-6 py-4">{cell}</td>
            ))}
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
