---
const { children } = Astro.props;
---

<pre
  class="not-prose bg-gray-900 text-white p-4 rounded-xl overflow-x-auto font-mono border border-gray-700"
  dir="ltr"
  style="direction: ltr; unicode-bidi: isolate; text-align: left;">
  <code class="block whitespace-pre" style="direction: ltr; unicode-bidi: isolate; text-align: left; font-family: 'Monaco', 'Consolas', monospace;">
    {children}
  </code>
</pre>
